# Restart networking
/etc/init.d/networking restart

# Set the default route towards 7
ip route add 0.0.0.0/0 via 151.0.45.0

# NAT rule (point 4)
iptables -t nat -A POSTROUTING -s 192.168.88.0/24 -o eth1 -j MASQUERADE

# Blocking traffic (point 5)
# Default policy: whitelist
iptables -P FORWARD DROP
iptables -A FORWARD -s 192.168.88.0/24 -p tcp -i eth0 -j ACCEPT
iptables -A FORWARD -p tcp -d 192.168.88.0/24 -o eth0 -m state --state RELATED,ESTABLISHED -j ACCEPT

# Firewall rules to allow OpenVPN traffic
iptables -t nat -A PREROUTING -i eth1 -p tcp --dport 7070 -j DNAT --to-destination 192.168.88.100:7070
iptables -A FORWARD -p tcp -d 192.168.88.100 --dport 7070 -m state --state NEW,ESTABLISHED,RELATED -j ACCEPT