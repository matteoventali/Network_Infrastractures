# Restart networking
/etc/init.d/networking restart

# Starting the DHCP server daemon
/etc/init.d/isc-dhcp-server start

# Set the default route towards r4
ip route add 0.0.0.0/0 via 50.0.0.9

# NAT rule (point 4)
iptables -t nat -A POSTROUTING -s 192.168.1.0/24 -j MASQUERADE

# Blocking traffic (point 5)
# Default policy: whitelist
iptables -P FORWARD DROP
iptables -A FORWARD -s 192.168.1.0/24 -p tcp -i eth0 -j ACCEPT
iptables -A FORWARD -p tcp -d 192.168.1.0/24 -o eth0 -m state --state RELATED,ESTABLISHED -j ACCEPT
